{
  "$id": "https://sofi-platform.dk/query-expression.v1.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryExpression",
  "type": "object",
  "properties": {
    "left": {
      "type": "object",
      "$ref": "#/definitions/Operand"
    },
    "operator": {
      "type": "string",
      "enum": ["AND", "OR", "AND NOT", "OR NOT", "<implicit>"]
    },
    "right": {
      "type": "object",
      "$ref": "#/definitions/Operand"
    }
  },
  "definitions": {
    "Operand": {
      "oneOf": [
        {
          "type": "object",
          "$ref": "#/definitions/QueryLeaf"
        },
        {
          "type": "object",
          "$ref": "#/"
        }
      ],
      "discriminator": {
        "propertyName": "operator",
        "mapping": {
          "TERM": "#/definitions/QueryLeaf",
          "AND": "#/",
          "OR": "#/",
          "AND NOT": "#/",
          "OR NOT": "#/"
        }
      }
    },
    "QueryLeaf": {
      "type": "object",
      "properties": {
        "field": {
          "type": "string"
        },
        "term": {
          "type": "string"
        },
        "operator": {
          "type": "string",
          "enum": ["TERM"]
        }
      },
      "required": ["field", "term"]
    }
  }
}
