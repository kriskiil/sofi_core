{
  "$id": "https://sofi-platform.dk/user-defined-view.v1.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UserDefinedView",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "hidden_columns": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "column_resizing": {
      "type": "object",
      "properties": {
        "column_widths": {
          "type": "object",
          "additionalProperties": true
        },
        "column_width": {
          "type": "integer"
        }
      }
    },
    "sort_by": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "desc": {
            "type": "boolean"
          },
          "id": {
            "type": "string"
          }
        }
      }
    },
    "column_order": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
