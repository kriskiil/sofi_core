{
  "$id": "https://schemas.ory.sh/presets/kratos/quickstart/email-password/identity.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "title": "E-Mail",
          "minLength": 3,
          "ory.sh/kratos": {
            "credentials": {
              "password": {
                "identifier": true
              }
            },
            "verification": {
              "via": "email"
            },
            "recovery": {
              "via": "email"
            }
          }
        },
        "institution": {
          "type": "string",
          "title": "Institution"
        },
        "security-groups": {
          "type": "array",
          "title": "Security Groups",
          "items": {
            "type": "string",
            "enum": [
              "sofi.passive",
              "sofi.lab",
              "sofi.lab-ac",
              "sofi.microbiologists",
              "sofi.administrators"
            ]
          }
        },
        "sofi-data-clearance": {
          "type": "string",
          "title": "Data Clearance",
          "enum": [
            "own-institution",
            "cross-institution",
            "all"
          ]
        }
      },
      "required": ["email"]
    }
  },
  "additionalProperties": false
}
